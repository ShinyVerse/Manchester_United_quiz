<% if @level.choice == "Easy" %>
<h1>You have selected the <%= @level.choice %> questions.</h1>
<% end %>
<% if @level.choice == "Medium" %>
<h1>You have selected the <%= @level.choice %> questions.</h1>
<% end %>
<% if @level.choice == "Hard" %>
<h1>You have selected the <%= @level.choice %> questions. Only for the Die Hard Red Devils!!</h1>
<% end %>

<form action='/answer' method='post'>
  <h1><%= @level.result['question'] %></h1>
  <input type="submit" name='answer' value="<%= @level.result['option_a'] %>">
  <input type="submit" name='answer' value="<%= @level.result['option_b'] %>">
  <input type="submit" name='answer' value="<%= @level.result['option_c'] %>">
  <input type="submit" name='answer' value="<%= @level.result['option_d'] %>">
</form>
